<Window x:Class="SC4CleanitolWPF.ScanTGIWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:SC4CleanitolWPF"
		mc:Ignorable="d"
		Title="ScanTGIWindow"
		Height="100"
		Width="250">
	<Grid>
		<ProgressBar  x:Name="FilesScannedProgress"
					  HorizontalAlignment="Left"
					  Height="17"
					  VerticalAlignment="Top"
					  Width="150"
					  Margin="90,10,0,0" />
		<TextBlock x:Name="Title"
				   Text="Scanning TGIs"
				   HorizontalAlignment="Left"
				   Margin="10,10,0,0"
				   VerticalAlignment="Top" />
		<TextBlock x:Name="FilesScannedLabel"
				   Text="##### of ##### files scanned"
				   HorizontalAlignment="Left"
				   Margin="10,32,0,0"
				   VerticalAlignment="Top" />
		<TextBlock x:Name="TGIsFoundLabel"
				   Text="##### TGIs discovered"
				   HorizontalAlignment="Left"
				   Margin="10,53,0,0"
				   VerticalAlignment="Top" />
	</Grid>
</Window>
